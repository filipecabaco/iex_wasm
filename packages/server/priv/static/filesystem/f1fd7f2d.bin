[needs lib/enter.4th]

create symbol ," M" ," CM" ," D" ," CD"
              ," C" ," XC" ," L" ," XL"
              ," X" ," IX" ," V" ," IV" ," I"

create symval 1000 ,  900 , 500 ,  400 ,
               100 ,   90 ,  50 ,   40 ,
                10 ,    9 ,   5 ,    4 ,   1 ,
here symval - constant /symval

: roman ( n -- )
  1 max 3999 min
  /symval 0 do
    begin dup symval i th @c < except
      symbol i th @c count type
      symval i th @c -
    repeat
  loop
  drop
;

: prompt ( -- )
  ." Enter number:  " enter
  ." Roman numeral: " roman cr
;

prompt


