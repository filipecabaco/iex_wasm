[UNDEFINED] ASCII>XML [IF]
: ASCII>XML
    \ traitements signes reserves HTML
    case
      [char] < of s" &lt;"   ;endof    \ Signe inferieur a
      [char] > of s" &gt;"   ;endof    \ Signe supreieur a
      [char] & of s" &amp;"  ;endof    \ Ampersand
      [char] " of s" &quot;" ;endof    \ Signe double appostrophe
      [char] ' of s" &apos;" ;endof    \ Signe apostrophe
      <# [char] ; hold #s [char] # hold [char] & hold #> exit
    endcase
;
[THEN]

