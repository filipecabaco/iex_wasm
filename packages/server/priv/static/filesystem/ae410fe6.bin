[UNDEFINED] spin  [IF]
[UNDEFINED] yield [IF] include lib/yield.4th [THEN]

: spin 8 emit emit sync ;              ( c --)

: spinner                              ( --)
  begin
    [char] | spin yield [char] / spin yield 
    [char] - spin yield [char] \ spin yield
  again
;
[THEN]

